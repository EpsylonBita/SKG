        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.GreekEvents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.GreekEvents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.GreekEvents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.GreekEvents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.GreekEvents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.GreekEvents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GreekEvents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.GreekEvents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GreekEvents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GreekEvents.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GreekEvents.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.GreekEvents.Button</item>
        
        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GreekEvents.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GreekEvents.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GreekEvents.LargeComponent</item>
    </style>
    
