<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="24dp">

    <!-- Categories Section Header -->
    <View
        android:id="@+id/shimmer_categories_header_title"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_categories_header_button"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_categories_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_categories_header_title" />

    <!-- Categories Shimmer -->
    <LinearLayout
        android:id="@+id/shimmer_categories_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_categories_header_title">

        <include layout="@layout/shimmer_category_item" />

        <include layout="@layout/shimmer_category_item" />

        <include layout="@layout/shimmer_category_item" />

    </LinearLayout>

    <!-- Recommended Events Section Header -->
    <View
        android:id="@+id/shimmer_recommended_header_title"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_categories_container" />

    <View
        android:id="@+id/shimmer_recommended_header_button"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_recommended_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_recommended_header_title" />

    <!-- Recommended Events Shimmer -->
    <LinearLayout
        android:id="@+id/shimmer_recommended_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_recommended_header_title">

        <include layout="@layout/shimmer_event_item" />

        <include layout="@layout/shimmer_event_item" />

    </LinearLayout>

    <!-- Popular Events Section Header -->
    <View
        android:id="@+id/shimmer_popular_header_title"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_recommended_container" />

    <View
        android:id="@+id/shimmer_popular_header_button"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_popular_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_popular_header_title" />

    <!-- Popular Events Shimmer -->
    <LinearLayout
        android:id="@+id/shimmer_popular_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_popular_header_title">

        <include layout="@layout/shimmer_event_item" />

        <include layout="@layout/shimmer_event_item" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 